# Backend Dockerfile for PM NBA Agent
FROM python:3.12-slim

WORKDIR /app

# 安装系统依赖
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 安装 uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:${PATH}"

# 复制依赖文件
COPY pyproject.toml uv.lock ./

# 安装 Python 依赖（跳过项目本身的安装）
RUN uv sync --frozen --no-dev --no-install-project

# 复制应用代码
COPY pm_nba_agent ./pm_nba_agent

# 设置 Python 路径以便找到 pm_nba_agent 模块
ENV PYTHONPATH=/app

# 暴露端口
EXPOSE 8000

# 启动应用（使用虚拟环境中的 fastapi）
CMD [".venv/bin/fastapi", "run", "pm_nba_agent/api/app.py", "--host", "0.0.0.0", "--port", "8000"]
